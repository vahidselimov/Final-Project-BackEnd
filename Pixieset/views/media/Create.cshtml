
@{
    Layout = null;
}

@model MediaCreateVM


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
</head>
<body>
    <h1>Create</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class=text-danger></div><input asp-for="Files" type="hidden">
                <div class="form-group"><label asp-for="Files" class="control-label"></label><input asp-for="Files"
                        class="form-control"><span asp-validation-for="Files" class="text-danger"></span></div>
                <div class="form-group"><label asp-for="CategoryId"  class="control-label"></label><select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories,"Id","Title"))"></select><span asp-validation-for="CategoryId" class="text-danger"></span></div>
                <div class="form-group"><input type="submit" value="Create" class="btn-btn-primary"></div>
            </form>
        </div>
    </div>
</body>

</html>
