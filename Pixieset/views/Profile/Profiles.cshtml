@{
    Layout = "_Layout1";
}

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.3.0/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="../assets/css/profiles.css">
    <title>Profiles</title>
</head>
<main>
    <section id="quicks">
        <div class="quicks">
            <div class="container">
                <div class="row">
                    <div class="photos">
                        <a asp-action="index" asp-controller="Media">
                            <h1>Photos</h1>
                            <p>Click</p>
                        </a>
                    </div>
                    <div class="albums">
                        <a asp-action="index" asp-controller="Category">
                            <h1>Albums</h1>
                            <p>Click</p>
                        </a>
                    </div>
                    <div class="boxs">
                        <div class="notifications col-lg-6">
                            <i class="fa-solid fa-bell"></i><span>NOTIFICATIONS</span>
                            <div class="box">
                                <div class="title">
                                    <h3>Your latest Notifications</h3>
                                    <p>All your latest client activity will be shown here</p>
                                </div>
                            </div>
                        </div>
                        <div class="quicklinks col-lg-6">
                            <i class="fa-solid fa-link"></i><span>QUICK LINKS</span>
                            <div class="box">
                                <div class="carts">
                                    <div class="icons"><i class="fa-solid fa-user"></i></div>
                                    <div class="title">
                                        <a asp-action="myprofile" asp-controller="Profile">
                                            <h3>
                                                Your Profile
                                            </h3>
                                            <p>
                                                Edit your profile photo, business name, and more
                                            </p>
                                        </a>
                                    </div>
                                </div>
                                <div class="carts">
                                    <div class="icons"><i class="fa-solid fa-gears"></i></div>
                                    <div class="title">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a asp-controller="Profile" asp-action="Profiles">
                                                <h3>
                                                    Account
                                                </h3>
                                                <p>
                                                    Edit your username, email,and password
                                                </p>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="account" asp-action="register">
                                                <h3>
                                                    Account
                                                </h3>
                                                <p>
                                                    Edit your username, email,and password
                                                </p>
                                            </a>
                                        }
                                    </div>
                                </div>
                                <div class="carts">
                                    <div class="icons"><i class="fa-solid fa-right-from-bracket"></i></div>
                                    <div class="title">
                                        <a asp-controller="account" asp-action="Logout">
                                            <h3>
                                                Logout
                                            </h3>
                                            <p>
                                                log out of your account
                                            </p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
<!-- MDB -->

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.3.0/mdb.min.js"></script>
</html>


