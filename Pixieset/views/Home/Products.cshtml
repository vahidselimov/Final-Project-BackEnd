</head>
@model HomeVM
@if (TempData["Verify"] != null)
{
    <input type="hidden"  id="verifyJS" />
}
@if (TempData["Verified"] != null)
{
    <input type="hidden"  id="verifiedJS" />
}
<main>

    <!--First-->
    <section id="first">
        <div class="text-center">
            <div class="container">
                <div class="row">
                    <div class="title">@Model.ProductFirst.Title</div>
                    <div class="text">
                        @Model.ProductFirst.Text

                    </div>

                </div>
                <div class="btn">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Profile" asp-action="Profiles">@Model.ProductFirst.Link</a>
                    }
                    else
                    {
                        <a asp-controller="Account"
                       asp-action="Login">@Model.ProductFirst.Link</a>
                    }
                </div>
            </div>
        </div>
        <div class="image"><a href=""><img src="../assets/images/@Model.ProductFirst.Image" alt=""></a></div>
    </section>

    <!--Social media -->
    <section id="socialmedias">
        <div class="sharing">
            <div class="container">
                <div class="row">
                    <div class="title">
                        <h5>@Model.SocialMedias.Title</h5>
                    </div>
                    <div class="text">
                        <h3>@Model.SocialMedias.Text</h3>
                    </div>
                    <div class="right">
                        <h5>
                            @Model.SocialMedias.Right
                        </h5>
                    </div>
                    <div class="image"><img src="../assets/images/@Model.SocialMedias.Image" alt=""></div>
                    <div class="feture">
                        <div class="images1">
                            <span>
                                <i class="@Model.SocialMedias.Icon1"></i>@Model.SocialMedias.Span1
                            </span>
                        </div>
                        <div class="images2"><span><i class="@Model.SocialMedias.Icon2"></i>@Model.SocialMedias.Span2</span></div>
                        <div class="images3">
                            <span>
                                <div class="socialicons">
                                    @foreach (SocialIcons icons in @Model.SocialIcons)
                                    {
                                        <a href=""><i class="@icons.Icons"></i></a>
                                    }
                                    @Model.SocialMedias.Span3
                                </div>
                            </span>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </section>
    <!--Workflow-->
    <section id="flow">
        <div class="work col-lg-12 col-md-12 col-sm-12">
            <div class="container">
                <div class="row">
                    <div class="title col-lg-12 col-md-12 col-sm-12 ">
                        <h5>@Model.Flow.FlowTitle</h5>
                    </div>
                    <div class="rigth col-lg-12 col-md-12 col-sm-12">
                        <h3>@Model.Flow.FlowRight</h3>
                    </div>
                    <div class="text col-lg-12 col-md-12">
                        <p>
                            @Model.Flow.FlowText
                        </p>
                    </div>
                    <div class="image col-lg-12 col-md-12 col-sm-12">
                        <img src="../assets/images/@Model.Flow.FlowImage" alt="">
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!--Digital-->
    <section id="digital">
        <div class="download">
            <div class="container">
                <div class="row">
                    <div data-aos="fade-right" data-aos-delay="600" class="col-lg-6 col-md-6 col-sm-6">
                        <div class="download-image ">
                            <img src="../assets/images/@Model.Digital.RightImage" alt="">
                        </div>
                    </div>
                    <div data-aos="fade-left" data-aos-delay="600" class="col-lg-6 col-sm-6 col-md-6">
                        <div class="cards">
                            <div class="text">
                                <h2>@Model.Digital.LeftText</h2>
                                <h3>@Model.Digital.LeftText2 <span>@Model.Digital.LeftSpan</span></h3>
                                <p>
                                    @Model.Digital.LeftText3
                                </p>
                            </div>
                            <div class="list">
                                <ul>
                                    <li><i class="@Model.Digital.Icons"></i>@Model.Digital.Leftli1 </li>
                                    <li><i class="@Model.Digital.Icons"></i>@Model.Digital.Leftli2</li>
                                </ul>
                                <ul>
                                    <li><i class="@Model.Digital.Icons"></i>@Model.Digital.Leftli3</li>
                                    <li><i class="@Model.Digital.Icons"></i>@Model.Digital.Leftli4</li>
                                </ul>

                            </div>
                        </div>
                    </div>
                    <div data-aos="fade-right" data-aos-delay="600" class="col-lg-6 col-sm-6 col-md-6">
                        <div class="cards">
                            <div class="text">
                                <h2>@Model.Digital.RightText</h2>
                                <h3><span>@Model.Digital.RightSpan</span>  @Model.Digital.RightText2</h3>
                                <p>
                                    @Model.Digital.RightText3
                                </p>
                            </div>
                            <div class="list">
                                <ul>
                                    <li>@Model.Digital.Rightli1<i class="@Model.Digital.Icons"></i></li>
                                    <li>@Model.Digital.Rightli2<i class="@Model.Digital.Icons"></i></li>
                                </ul>
                                <ul>
                                    <li>@Model.Digital.Rightli3<i class="@Model.Digital.Icons"></i></li>
                                    <li>
                                        @Model.Digital.Rightli4<i class="@Model.Digital.Icons"></i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div data-aos="fade-left" data-aos-delay="600" class="col-lg-6 col-md-6 col-sm-6">
                        <div class="download-image ">
                            <img src="../assets/images/@Model.Digital.LeftImage" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="store">
        <div class="container">
            <div class="row">
                <div class="first col-lg-12 col-md-12 col-sm-12">
                    <div class="flex">
                        <img src="../assets/images/@Model.Store.Image1" alt="">
                        <h2>@Model.Store.Name</h2>
                    </div>
                    <div class="print">
                        <h2>@Model.Store.Title</h2>
                        <p>@Model.Store.Text</p>
                        <a href="">@Model.Store.Link <i class="@Model.Store.Icon"></i> </a>
                    </div>
                </div>
                <div class="learn">
                    <div class="set col-lg-4 col-md-4 col-sm-12">
                        <div class="image"><img src="../assets/images/@Model.Store.Image2" alt=""></div>
                        <h3>@Model.Store.Title2</h3>
                        <p>@Model.Store.Text2</p>
                    </div>
                    <div class="commission col-lg-4 col-md-4 col-sm-12">
                        <div class="image"><img src="../assets/images/@Model.Store.Image3" alt=""></div>
                        <h3>@Model.Store.Title3</h3>
                        <p>@Model.Store.Text3</p>
                    </div>
                    <div class="your col-lg-4 col-md-4 col-sm-12">
                        <div class="image"><img src="../assets/images/@Model.Store.Image4" alt=""></div>
                        <h3>@Model.Store.Title4</h3>
                        <p>@Model.Store.Text4</p>
                    </div>
                </div>
                <div class="big-image col-lg-10 col-md-10 col-sm-12">
                    <img src="../assets/images/@Model.Store.Image5" alt="">
                </div>
            </div>
        </div>
    </section>
    <!--Slider-->
    <section id="slider">
        <div class="container">
            <div class="row">
                <div class="title">




                    @foreach (Slider slider in @Model.Sliders)
                    {
                        if (@slider.Name != null)
                        {
                            <h3>@slider.Name</h3>
                        }


                    }



                </div>

                <div class="slider">
                    @foreach (Slider slider in @Model.Sliders)
                    {
                        <div class="titles col-md-4 col-sm-12 ">
                            <div class="sl col-lg-5 col-md-4 col-sm-12 ">
                                <p class="quate">@slider.Text1</p>
                                <div class="autor">
                                    <img src="../assets/images/@slider.Image" alt="">
                                    <p>@slider.Text2 <br> <small>@slider.Small</small></p>
                                </div>
                            </div>
                            <div class="sl col-lg-5 col-md-4 col-sm-12 ">
                                <p class="quate">@slider.Text3</p>
                                <div class="autor">
                                    <img src="../assets/images/@slider.Image2" alt="">
                                    <p>@slider.Text4 <br> <small>@slider.Small</small></p>
                                </div>
                            </div>
                        </div>
                    }



                </div>

            </div>
        </div>
    </section>
    <section id="cards">
        <div class="container">
            <div class="row">
                <div class="title">
                    @foreach (Cards cards1 in @Model.Cards)
                    {
                        @if (cards1.Name != null)
                        {
                            <h3>@cards1.Name </h3>
                        }

                    }
                </div>
                @foreach (Cards cards in @Model.Cards)
                {
                    <div class="card col-lg-4 col-md-6  col-sm-12">
                        <div class="product">
                            <a href="">
                                <div class="image">
                                    <img src="../assets/images/@cards.Image"
                                     alt=""><span>@cards.Span</span>
                                </div>
                                <div class="text">
                                    <p>
                                        @cards.Text
                                    </p>
                                </div>
                                <div class="learn">
                                    <h5>@cards.Title <i class="@cards.Icons"></i></h5>
                                </div>
                            </a>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>
    <section id="get">
        <div class="get">
            <div class="container">
                <div class="row">
                    <div class="title">
                        <h3> @Model.Get.Title</h3>

                    </div>
                    <div class="text">
                        <p>@Model.Get.Text</p>

                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Profile" asp-action="Profiles">@Model.Get.Link</a>

                    }
                    else
                    {
                        <a asp-controller="Profile" asp-action="Profiles">@Model.Get.Link</a>
                    }

                </div>
            </div>
        </div>
    </section>
</main>
